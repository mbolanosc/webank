extends layout

block content
  header
  
    nav.navbar
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#nav1", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Banco de la República Costarricense
        #nav1.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-right
            li: a.f-nav( href="/") Cliente
            li.active: a.f-nav( href="/service") Servicios
    

  div#carousel.slide.carousel(data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#carousel" data-slide-to="0")
      
    div.carousel-inner(role="listbox")
      div.item.active
        img(src="img/slide03.jpg" alt="" with="1500px")
        div.carousel-caption  
          form( method="post", id="showList", action="/showList")
            div.row
              select.form-control(name="ticket", id="ticket")
                option(value="Cajas") Cajas
                option(value="Plataforma") Plataforma
                option(value="Credito") Crédito
                option(value="Marchamo") Marchamo
                option(value="Discapacidad") Personas con Discapacidad
              input(type="submit", value="Mostrar")
              
