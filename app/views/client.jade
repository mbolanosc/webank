extends layout

block content
  header

    nav.navbar
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#nav1", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Banco de la República Costarricense
        #nav1.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-right
            li.active: a.f-nav.dropdown-toggle( href="/" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Ver fichas cliente
              span.caret
              ul.dropdown-menu
                li: a(href="clientBoxList") Lista de Cajas
                li: a(href="clientPlatformList") Lista de Plataforma
                li: a(href="clientCreditList") Lista de Crédito
                li: a(href="clientMarchamoList") Lista de Marchamo
                li: a(href="clientDisabledPeopleList") Lista de Personas con Discapacidad
            li: a.f-nav( href="/service") Servicios


  div#carousel.slide.carousel(data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#carousel" data-slide-to="0")
    div.carousel-inner(role="listbox")
      div.item.active
        img(src="img/slide01.jpg" alt="" with="1500px")
        div.carousel-caption  
          h1 BARECO
          h4 Tome su ficha selecionando a cual caja quiera ir dependiendo de su transacción.
          form( method="post", id="getYourTicket", action="/getTicket")
            div.row
              select.form-control(name="ticket", id="ticket")
                option(value="Cajas") Cajas
                option(value="Plataforma") Plataforma
                option(value="Credito") Crédito
                option(value="Marchamo") Marchamo
                option(value="Discapacidad") Personas con Discapacidad
              input(type="submit", value="Obtener")
  
  footer 
    div.container(id="cont-footer")
      div.row(id="footer")
        div.col-md-4 
        div.col-md-4 
          p.footerText Copyright 2016 BARECO-Todos los derechos reservados
        div.col-md-4 
